@page
@using Domain.Enums
@model WebApp.Pages_Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Games</h1>


<table class="table border">
    <thead>
    <tr>
        <th>
            Game name
        </th>
        <th>
            Player1
        </th>
        <th>
            Player2
        </th>
        <th>
            Is game over?
        </th>
        <th>
            Who makes move after hit?
        </th>
        <th>
            Ship touch rule
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Game)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameBoard1!.Player!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameBoard2!.Player!.Name)
            </td>

            @if (item.IsGameOver)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
            <td>
                @MoveAfterHit.ToString(item.EMoveAfterHit!.Value)
            </td>
            <td>
                @ShipTouchRule.ToString(item.EShipTouchRule!.Value)
            </td>
            
            <td>
                <a asp-page="./Delete" asp-route-id="@item.GameId">Delete</a> |
                <a asp-page="./Continue" asp-route-id="@item.GameId">Continue</a>
            </td>
        </tr>
    }
    </tbody>
</table>