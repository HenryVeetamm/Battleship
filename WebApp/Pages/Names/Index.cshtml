@page
@model WebApp.Pages.Names.Index

@{
    Layout = "Shared/_Layout";
}

@if (!ModelState.IsValid){
    <div asp-validation-summary="All" class="alert alert-danger col-4 offset-4"></div>
}

<form method="post">
    
    <div class="form-group col-4 offset-4 justify-content-md-center">
        <label asp-for="GameName">Game name</label>
        <input asp-for="GameName" class="form-control text-center" placeholder="Enter game name">
        <small class="form-text text-muted">Game name is used for helping you to find the game if you want to continue the game</small>
    </div>
    <div class="form-group col-4 offset-4 justify-content-md-center">
        <label asp-for="Player1Name">Player 1 name</label>
        <input asp-for="Player1Name" class="form-control text-center" placeholder="Enter player1 name">
    </div>
    <div class="form-group col-4 offset-4 justify-content-md-center">
        <label asp-for="Player2Name">Player 2 name</label>
        <input asp-for="Player2Name" class="form-control text-center" placeholder="Enter player2 name">
    </div>
    <button type="submit" class="btn btn-primary">Continue</button>
</form>